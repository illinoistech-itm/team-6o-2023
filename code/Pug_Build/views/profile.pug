extends layout

block customcss 
  link(rel='stylesheet' href='/stylesheets/sidebar.css')

block content
    .home-area.scrollarea.bg-light.p-5.rounded
        h1 Profile page 
        body
            //form(method='POST', name='postForm', action='/home/feed')
                h2 New Post:
                fieldset 
                    div 
                        textarea(name="caption", cols="40", rows="10", placeholder="What Do You Mean? Woahhh~~~")
                    div 
                        p 
                            input(type="submit" value="Post Me")

            if posts.length>0 
                //table(class="table table-hover table-light")
                    thead 
                        tr 
                            th(scope="col") Caption 
                            th(scope="col") Created 
                            th(scope="col") Email 
                            th(scope="col") pid
                            th(scope="col") Operations
                    tbody 
                        each value in posts 
                            tr 
                                td= value.caption 
                                td= value.created 
                                td= account.email
                                td= value.pid
                                td
                                    a(href=`/profile/posts/${value.pid}/edit`, class="btn btn-primary")= 'Edit Post'
                                    a(href=`/profile/posts/${value.pid}/delete`, class="btn btn-danger")= 'Delete Post'
                each value in posts
                    div(class="profile-post")
                        h5 #{value.caption}
                        if value.image != null
                            img(src=value.signedURL)
                        p(class="date-time") #{value.created}
                        a(href=`/profile/posts/${value.pid}/edit`, class="btn btn-primary")= 'Edit Post'
                        a(href=`/profile/posts/${value.pid}/delete`, class="btn btn-danger")= 'Delete Post'
                                