doctype html
html
  head
    title= title
    block customcss
    block sidebar
      link(rel='stylesheet' href='/stylesheets/sidebar.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block main
      main.d-flex.flex-nowrap
        .d-flex.flex-column.flex-shrink-0.p-3.text-bg-dark(style='width: 280px;')
            a.d-flex.align-items-center.mb-3.mb-md-0.me-md-auto.text-white.text-decoration-none(href='/')
                svg.bi.pe-none.me-2(width='40' height='32')
                    use(xlink:href='')
                span.fs-4 Hawkstagram
            hr

            ul.nav.nav-pills.flex-column.mb-auto
                li.nav-item
                  block currentPage
                    a.nav-link.text-white(href='/home/feed' aria-current='page') Home
                  svg.bi.pe-none.me-2(width='16' height='16')
                      use(xlink:href='')
                //li
                    a.nav-link.text-white(href='#') Profile
                    svg.bi.pe-none.me-2(width='16' height='16')
                        use(xlink:href='')
            hr

            .dropdown
                a.d-flex.align-items-center.text-white.text-decoration-none.dropdown-toggle(href='' data-bs-toggle='dropdown' aria-expanded='false')
                    img.rounded-circle.me-2(src='https://github.com/pengu07.png' alt='' width='32' height='32')
                    strong Test User 
                        use(xlink:href='')
                ul.dropdown-menu.dropdown-menu-dark.text-small.shadow
                    li
                        a.dropdown-item(href='/profile') Profile
                    li
                        hr.dropdown-divider
                    li
                        a.dropdown-item(href='/home/logout') Sign out
        block content

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous")
  block customScripts
